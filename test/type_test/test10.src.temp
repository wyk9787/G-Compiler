let fact (n : int) : int = 
  if (n > 0) 
  then n * (fact (n-1))
  else 1
;;

let max2 (x : int, y : int) : int = 
  if x > y 
  then x
  else y
;;

let list_sum (l : {int}) : int =  
  if (empty? (l)) 
  then 0
  else car (l) + (list_sum cdr(l))
;;

let inner_product (l1 : {int}, l2 : {int}) : int =
  if (empty? (l1)) 
  then 0
  else car(l1) * car(l2) +  (inner_product (cdr(l1)) (cdr(l2)))
;;

let cool_func(x : int, y : int, z : int) : int =
  (fact x) + (max2 y z)
;;

